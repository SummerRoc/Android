<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:src="@drawable/pikapika"
        android:layout_weight="6"
        android:id="@+id/image_view_id"/>

    <TextView
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:text="欢迎使用图书馆系统"
        android:textSize="30sp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="4">

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1" android:id="@+id/introduce_id"
        android:text="图书馆介绍" android:textSize="21sp"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/news_id"
        android:text="图书馆动态"
        android:textSize="21sp"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="4">

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/newBook_id"
        android:text="新书推荐"
        android:textSize="21sp"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/ranking_id"
        android:text="借阅排行榜"
        android:textSize="21sp"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="4">

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/registerStudent_id"
        android:text="学生注册"
        android:textSize="21sp"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/blacklist_id"
        android:text="视频文件"
        android:textSize="21sp"/>

</LinearLayout>

</LinearLayout>